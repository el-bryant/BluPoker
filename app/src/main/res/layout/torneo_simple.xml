<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearMesa"
    android:background="@drawable/background"
    android:keepScreenOn="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mesa sin nombre"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:textAlignment="center"
                        android:background="@drawable/nombre_mesa"
                        android:layout_weight="2"
                        android:textColor="@color/blanco"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginHorizontal="5dp">


                        <RadioButton
                            android:id="@+id/mesa6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:buttonTint="@color/blanco"
                            android:textColor="@color/blanco"/>

                        <ImageView
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:backgroundTint="@color/blanco"
                            android:background="@drawable/icouser"
                            android:layout_marginHorizontal="5dp"/>

                        <RadioButton
                            android:id="@+id/mesa9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="9"
                            android:buttonTint="@color/blanco"
                            android:checked="true"
                            android:textColor="@color/blanco"/>

                        <ImageView
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:background="@drawable/icouser"
                            android:backgroundTint="@color/blanco"
                            android:layout_marginHorizontal="5dp"/>

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acción:"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/accion15s"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="15s"
                        android:buttonTint="@color/blanco"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/blanco"/>

                    <RadioButton
                        android:id="@+id/accion20s"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="20s"
                        android:buttonTint="@color/blanco"
                        android:layout_marginHorizontal="10dp"
                        android:checked="true"
                        android:textColor="@color/blanco"/>

                    <RadioButton
                        android:id="@+id/accion30s"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="30s"
                        android:buttonTint="@color/blanco"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/blanco"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="Entrada:"
                        android:textColor="@color/blanco"
                        android:textSize="15sp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/numeroedit"
                        android:hint="Ingrese un número entero hasta 10000"
                        android:inputType="number"
                        android:textSize="14dp"
                        android:textColor="@color/blanco"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="2"
                        android:textColorHint="@color/blanco"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Fichas iniciales:"
                            android:textColor="@color/blanco"
                            android:layout_weight="2"
                            android:textSize="15sp"/>

                        <Button
                            android:id="@+id/btnMenosFichasI"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:text="-"
                            android:textStyle="bold"
                            android:background="@drawable/boton4"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"
                            android:onClick="menosFichasI" />

                        <TextView
                            android:id="@+id/tvFIniciales"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="3000"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:layout_marginHorizontal="5dp"
                            android:textColor="@color/blanco"/>

                        <Button
                            android:id="@+id/btnMasFichasI"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:text="+"
                            android:textStyle="bold"
                            android:background="@drawable/boton4"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"
                            android:onClick="masFichasI"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Ciegas Arriba:"
                            android:textColor="@color/blanco"
                            android:layout_weight="2"
                            android:textSize="15sp"/>

                        <Button
                            android:id="@+id/btnMenosCiegasA"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:text="-"
                            android:textStyle="bold"
                            android:background="@drawable/boton4"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"
                            android:onClick="menosCiegasArriba"/>

                        <TextView
                            android:id="@+id/tvCiegasA"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="3 min"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/blanco"/>

                        <Button
                            android:id="@+id/btnMasCiegasA"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:text="+"
                            android:textStyle="bold"
                            android:background="@drawable/boton4"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:onClick="masCiegasArriba"
                            android:layout_marginHorizontal="5dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:text="Velocidad:"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <RadioButton
                        android:id="@+id/Vnormal"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:buttonTint="@color/blanco"
                        android:text="Normal"
                        android:textColor="@color/blanco"/>

                    <RadioButton
                        android:id="@+id/Vturbo"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:buttonTint="@color/blanco"
                        android:text="Turbo"
                        android:checked="true"
                        android:textColor="@color/blanco"/>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:gravity="center">

                <Switch
                    android:id="@+id/AutParaRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Autorizado para registrar"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:theme="@style/SwitchTheme"
                    android:padding="5dp"
                    android:textColor="@color/blanco"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <Button
                android:id="@+id/btnEmpezar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Empezar"
                android:textStyle="bold"
                android:background="@drawable/boton3"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:onClick="empezarTorneoSimple"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>