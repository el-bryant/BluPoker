<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:keepScreenOn="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trebol_filtro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione un caracter:"
                android:textColor="@color/blanco"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_margin="15dp"/>

            <LinearLayout
                android:id="@+id/linAvatarHombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imbH01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pjh01"
                        android:background="@color/transparente"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:onClick="ImagenM01"/>

                    <ImageButton
                        android:id="@+id/imbH02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pjh02"
                        android:background="@color/transparente"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:onClick="ImagenM02"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imbH03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pjh03"
                        android:background="@color/transparente"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:onClick="ImagenM03"/>

                    <ImageButton
                        android:id="@+id/imbH04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pjh04"
                        android:background="@color/transparente"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:onClick="ImagenM04"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imbH05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pjh05"
                        android:background="@color/transparente"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:onClick="ImagenM05"/>

                    <ImageButton
                        android:id="@+id/imbH06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pjh06"
                        android:background="@color/transparente"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:onClick="ImagenM06"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imbH07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pjh07"
                        android:background="@color/transparente"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:onClick="ImagenM07"/>

                    <ImageButton
                        android:id="@+id/imbH08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pjh08"
                        android:background="@color/transparente"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:onClick="ImagenM08"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

