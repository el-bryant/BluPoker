<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Modalidad"
    android:keepScreenOn="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trebol_filtro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_texas"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:text="Poker Texas"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:onClick="Texas"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_omaha"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:text="Poker Omaha"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:onClick="Omaha"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>